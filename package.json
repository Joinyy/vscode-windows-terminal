{
	"name": "windows-terminal",
	"displayName": "Windows Terminal Integration",
	"description": "VS Code integration with Windows Terminal",
  "version": "0.1.0",
  "icon": "images/icon.png",
	"author": {
		"name": "Daniel Imms"
	},
	"publisher": "Tyriar",
	"extensionKind": [
		"ui"
	],
	"engines": {
		"vscode": "^1.45.0"
  },
  "bugs": {
    "url": "https://github.com/Tyriar/vscode-windows-terminal/issues"
  },
  "homepage": "https://github.com/Tyriar/vscode-windows-terminal",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tyriar/vscode-windows-terminal"
  },
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-windows-terminal.openWithProfile"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-windows-terminal.openWithProfile",
				"title": "Open in Windows Terminal",
				"category": "Windows Terminal"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "vscode-windows-terminal.openWithProfile",
					"group": "navigation@31"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"jsonc-parser": "^2.2.1"
	}
}
